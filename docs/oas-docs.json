{
    "tags": [
        {
            "name": "auth-service/token",
            "description": "Refresh your access token, or exchange your authorization code for an access token and a refresh token."
        },
        {
            "name": "auth-service/authn",
            "description": "Authenticate a user with a user/password auth flow."
        },
        {
            "name": "auth-service/session",
            "description": "Create, get or refresh a user's session."
        },
        {
            "name": "auth-service/userinfo",
            "description": "Get various information about the signed in user."
        },
        {
            "name": "auth-service/authorize",
            "description": "Begin the back-end oauth2 flow. This is not the url that should be provided to your OAuth2.0 client.",
            "externalDocs": {
                "description": "OAuth2.0 implementation tutorial",
                "url": "https://jwa-lab.github.io/platform-docs/docs/tutorial/oauth2-implementation"
            }
        }
    ],
    "paths": {
        "/auth-service/token": {
            "post": {
                "tags": ["auth-service/token"],
                "summary": "Exchange an authorization code",
                "operationId": "exchangeAuthCode",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "grant_type": {
                                        "type": "string",
                                        "example": "authorization_code"
                                    },
                                    "code": {
                                        "type": "string",
                                        "example": "azertyuiopqsdfghjklmwxcvbn"
                                    },
                                    "client_id": {
                                        "type": "string",
                                        "example": "my_client_id"
                                    },
                                    "client_secret": {
                                        "type": "string",
                                        "example": "my_client_secret"
                                    },
                                    "redirect_uri": {
                                        "type": "string",
                                        "example": "http://localhost:3000/auth/callback"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "example": "user_access_token"
                                        },
                                        "refresh_token": {
                                            "type": "string",
                                            "example": "user_refresh_token"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/auth-service/token\u200E": {
            "post": {
                "tags": ["auth-service/token"],
                "summary": "Refresh an access token",
                "operationId": "refreshAccessToken",
                "security": [
                    {
                        "basicAuth": []
                    }
                ],
                "requestBody": {
                    "description": "Refresh an access token",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "grant_type": {
                                        "type": "string",
                                        "example": "refresh_token"
                                    },
                                    "refresh_token": {
                                        "type": "string",
                                        "example": "azertyuiopqsdfghjklmwxcvbn"
                                    },
                                    "access_token": {
                                        "type": "string",
                                        "example": "my_access_token"
                                    },
                                    "expires_in": {
                                        "type": "integer",
                                        "example": 3600
                                    },
                                    "token_type": {
                                        "type": "string",
                                        "example": "Bearer"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "example": "user_access_token"
                                        },
                                        "refresh_token": {
                                            "type": "string",
                                            "example": "user_refresh_token"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 3600
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/auth-service/authn": {
            "post": {
                "tags": ["auth-service/authn"],
                "summary": "Authenticate a user and get a session id cookie",
                "operationId": "authUser",
                "requestBody": {
                    "description": "Authenticate a user and get a session id cookie",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "my_playtix_username"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "my_playtix_password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "sessionToken": {
                                            "type": "string",
                                            "example": "user_session_token"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "SUCCESS"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/auth-service/sessions": {
            "post": {
                "tags": ["auth-service/sessions"],
                "summary": "Create a new session with a session token",
                "operationId": "createSession",
                "requestBody": {
                    "description": "Create a new session with a session token",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "sessionToken": {
                                        "type": "string",
                                        "example": "my_session_token_from_authn"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "user_session_id"
                                        },
                                        "login": {
                                            "type": "string",
                                            "example": "user login"
                                        },
                                        "expiresAt": {
                                            "type": "string",
                                            "example": "2015-08-30T18:41:35.818Z"
                                        },
                                        "userId": {
                                            "type": "string",
                                            "example": "palytix_user_id"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "ACTIVE"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/auth-service/userinfo": {
            "post": {
                "tags": ["auth-service/userinfo"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Return information about a user",
                "operationId": "userinfo",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "sub": {
                                            "type": "string",
                                            "example": "playtix_user_id"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "user login"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "some.user@jwalab.com"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/auth-service/authorize": {
            "get": {
                "tags": ["auth-service/authorize"],
                "summary": "Begin the OAuth2.0 flow (back-end only)",
                "operationId": "authorizeUser",
                "parameters": [
                    {
                        "name": "state",
                        "in": "path",
                        "description": "Random state",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "random_generated_state"
                        }
                    },
                    {
                        "name": "client_id",
                        "in": "path",
                        "description": "App client ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "my_client_id"
                        }
                    },
                    {
                        "name": "redirect_uri",
                        "in": "path",
                        "description": "App redirect uri",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "http://localhost:3000/auth/callback"
                        }
                    },
                    {
                        "name": "scope",
                        "in": "path",
                        "description": "App required scopes",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "profile openid offline_access"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "string",
                                            "example": "my_authorization_code"
                                        },
                                        "state": {
                                            "type": "string",
                                            "example": "random_generated_state_from_init"
                                        },
                                        "redirect_uri": {
                                            "type": "string",
                                            "example": "http://localhost:3000/auth/callback"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}
